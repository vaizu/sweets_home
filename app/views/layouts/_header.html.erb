<header class="shadow-sm mb-0 pb-0">
  <nav class="navbar navbar-light p-0 light2">
    <div class="container">
      <a class="navbar-brand" href="/" data-turbolincks="false"><%= image_tag 'logo2.png', size: "200x50" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        menu
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="row ml-0">
              <i class="far fa-bell mt-2 pt-1"></i>
              <%= link_to "お知らせ", user_notifications_path(current_user.id), class: 'nav-link text-dark ml-2' %>
              <% if unchecked_notifications.any? %>
                <div class="fa fa-circle mt-2 ml-2 pt-1" style="color: gold;"></div>
              <% end %>
            </li>
            <li class="row ml-0">
              <i class="fas fa-user-circle mt-2 pt-1"></i>
              <%= link_to 'マイページ', user_path(current_user.id), class: 'nav-link text-dark ml-2' %>
            </li>
            <li class="row ml-0">
              <i class="fas fa-pen-square mt-2 pt-1"></i>
              <%= link_to '新規投稿', new_post_path, class: 'nav-link text-dark ml-2' %>
            </li>
            <li class="row ml-0">
              <i class="fas fa-list-alt mt-2 pt-1"></i>
              <%= link_to '投稿一覧', posts_path, class: 'nav-link text-dark ml-2' %>
            </li>
            <li class="row ml-0">
              <i class="fas fa-sign-out-alt mt-2 pt-1" aria-hidden="true"></i>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark ml-2' %>
            </li>
          <% else %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>