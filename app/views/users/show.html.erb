<div class="d-flex justify-content-center">
  <div class="row col-10 pt-5">
    <div class="col-3">
      <%= image_tag @user.get_user_image, size: "200x200" %>
      <% if @user == current_user %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% else %>
        <% if current_user.following?(@user) %>
          <%=  link_to 'フォロー外す', user_relationships_path(@user.id), class: "btn btn-secondary", method: :delete %>
        <% else %>
          <%= link_to 'フォローする', user_relationships_path(@user.id),  class: "btn btn-success", method: :post %>
        <% end %>
      <% end %>
    </div>

    <div class="col-6">
      <h3><%= @user.name %></h3>
      <%= @user.introduction %>
    </div>

    <div class="col-3">
      <p>
        フォロー数
        <%= link_to user_followings_path(@user.id) do %>
          <%= @user.followings.count %>
        <% end %>
      </p>
      <p>
        フォロワー数
        <%= link_to user_followers_path(@user.id) do %>
          <%= @user.followers.count %>
        <% end %>
      </p>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    </div>
  </div>
</div>

<%= render 'posts/list', posts: @posts %>