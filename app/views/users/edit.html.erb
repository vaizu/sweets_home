<div class="container">
  <div class="row">
    <div class="col-3 mt-5">
      <h5 class="text-center bg-light">プロフィール編集</h5>
    </div>
  </div>
  <%= form_with model: @user, local:true do |f| %>
    <div class="form-group col-xs-9">
      <%= f.label :プロフィール画像, class: "col-sm-2" %>
      <%= f.file_field :user_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
    <div class="form-group col-xs-9">
      <%= f.label :ニックネーム, class: "col-sm-2" %>
      <%= f.text_field :name, autofocus: true %>
    </div>
     <div class="form-group col-xs-9">
      <%= f.label :自己紹介, class: "col-sm-2" %>
      <%= f.text_field :introduction, autofocus: true %>
    </div>
    <%= f.submit "変更を保存" %>
  <% end %>
</div>