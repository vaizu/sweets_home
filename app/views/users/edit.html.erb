<div class="container">
  <div class="row">
    <div class="col-5 mb-4">
      <h2 class="text-center bg-warning mt-5 ml-5 col-8">プロフィール編集</h2>
    </div>
  </div>
  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-10 mb-3 offset-2">
      <%= form_with model: @user, local:true do |f| %>
        <div class="form-group col-xs-9 mt-3">
          <%= f.label :プロフィール画像, class: "col-sm-3" %>
          <%= f.file_field :user_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group col-xs-9 mt-5">
          <%= f.label :ニックネーム, class: "col-sm-3" %>
          <%= f.text_field :name, autofocus: true %>
        </div>
         <div class="form-group col-xs-9 mt-5">
            <%= f.label :自己紹介, class: "col-sm-3 align-top" %>
            <%= f.text_area :introduction, autofocus: true, class: "col-sm-6 p-1", rows:"5" %>
        </div>
        <div class="row">
          <div class="col-3"></div>
          <div class="form-group col-8 mx-auto">
            <%= f.submit "変更を保存", class: "btn btn-success col-sm-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>