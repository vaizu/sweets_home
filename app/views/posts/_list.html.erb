<div class="container py-2">
  <div class="row">
    <% posts.each do |post| %>
    <div class="col-6">
      <div class="card mx-auto p-4 shadow-lg mt-5 w-75">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.get_post_image, class:"card-img-top ", style:"height: 280px; object-fit:contain" %>
        <% end %>

        <div class="card-body p-1 ">
          <div class="row">
            <div class="col-2">
              <%= image_tag post.user.get_user_image, size: "50x50" %>
              <%= post.user.name %>
            </div>
            <div class="col-7">
              <p class="card-title">
                <%= link_to(post_path(post.id), class:"text-dark") do %>
                  <h4><%= post.post_name %></h4>
                <% end %>
              </p>
            </div>

            <div class="col-3 pr-0">
              <%#いいね機能%>
              <% if post.favorited?(current_user) %>
              <%#すでにいいねしている場合%>
                <%= link_to post_favorites_path(post.id), method: :delete do %>
                  ♥<%= post.favorites.count %> いいね
                <% end %>
              <% else %>
                <%#いいねしていない場合%>
                <%= link_to post_favorites_path(post.id), method: :post do %>
                  ♡<%= post.favorites.count %> いいね
                <% end %>
              <% end %>
              <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
            </div>
          </div>

            <div class="row mt-2">
              <div class="col-4 font">
                <%= post.recipe_status %>
              </div>
              <div class="col-4 font">
                製作時間<%= post.cooking_time %>分
              </div>
              <div class="col-4 font">
                製作金額<%= post.cooking_cost %>円
              </div>
            </div>

            <div class="row">
              <% post.genres.each do |genre| %>
                <h3><%= genre.genre_name %></h3>
              <% end %>
            </div>
        </div>
      </div>
      </div>
    <% end %>
  <%= paginate posts %>
</div>