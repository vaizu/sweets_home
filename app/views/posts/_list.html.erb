<div class="card-list-container py-5">
  <% posts.each do |post| %>
    <div class="card w-50 mx-auto p-4 shadow-lg mt-5">
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_post_image,size: "auto", class:"card-img-top"; %>
      <% end %>

      <div class="card-body">
        <div class="row">
          <div class="col-2 mr-3">
            <%= image_tag post.user.get_user_image, size: "50x50" %>
          </div>
          <div class="col-7">
            <p class="card-title">
              <%= link_to(post_path(post.id), class:"text-dark") do %>
                <h2><%= post.post_name %></h2>
              <% end %>
            </p>
          </div>

          <div class="col-2">
            <%#いいね機能%>
            <% if post.favorited?(current_user) %>
            <%#すでにいいねしている場合%>
              <%= link_to post_favorites_path(post.id), method: :delete do %>
                <h1>♥</h1>
                <%= post.favorites.count %> いいね
              <% end %>
            <% else %>
            <%#いいねしていない場合%>
              <%= link_to post_favorites_path(post.id), method: :post do %>
                <h1>♡</h1>
                <%= post.favorites.count %> いいね
              <% end %>
            <% end %>
            <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
          </div>

          <div class="row mt-2">
            <div class="col-2"></div>
            <div class="col-3">
              <%= post.recipe_status %>
            </div>
            <div class="col-3">
              製作時間<%= post.cooking_time %>分
            </div>
            <div class="col-3">
              製作金額<%= post.cooking_cost %>円
            </div>
          </div>

          <div class="row">
            <% post.genres.each do |genre| %>
            <h3><%= genre.genre_name %></h3>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate posts %>
</div>