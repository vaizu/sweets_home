<%#検索フォーム %>
<div class="search-form">
  <%= form_with url: posts_path, method: :get, local: true do |f| %>
    <h5 class="ml-4 mt-3">投稿検索</h5>
    <%= f.text_field :search, class:"ml-5" %>
    <%= f.submit "検索", name: nil %>
  <% end %>
</div>
</div>

<div class="row">
  <div class="col-12">
    <%= render "genres/genre", genres: @genres %>
  </div>
 </div>
 <div class="row">
  <div class="col-12">
    <%= render 'list', posts: @posts %>
  </div>
</div>