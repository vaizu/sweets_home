<div class="container">
  <div class="mt-3 ml-5">
    <h2 class="">会員登録</h2>

    <%= render "devise/shared/links" %>
  </div>
<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
  <div class="col-3"></div>
  <div class= "col-6">
  <div class="form-group">
    <label>プロフィール画像</label></br>
    <%= f.file_field :user_image, class:"input-default" %>
  </div>

  <div class="field mt-2">
    <%= f.label :ニックネーム %><br>
    <%= f.text_field :name, class:"col-6" %>
  </div>

  <div class="field mt-2">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email", class:"col-6" %>
  </div>

  <div class="field mt-2">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"col-6" %>
  </div>

  <div class="field mt-2">
    <%= f.label :"パスワード(確認用)" %></br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-6" %>
  </div>

  <div class="actions text-center mt-3">
    <%= f.submit "登録", class:"btn btn-success pl-5 pr-5" %>
  </div>
<% end %>
</div>
<div class="col-3"></div>
</div>
</div>
