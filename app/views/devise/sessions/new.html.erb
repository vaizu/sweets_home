<div class="bg-1 pt-0">
  <div class="container">
    <div class="row">
      <div class="mt-3 ml-5 col-2 light">
        <h2>ログイン</h2>
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-3"></div>
      <div class= "col-6">
        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="field mt-4">
            <%= f.label :メールアドレス ,class:"light2" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-6 pl-0" %>
          </div>
          <div class="field mt-4">
            <%= f.label :パスワード ,class:"light2" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"col-6 pl-0" %>
          </div>

          <div class="actions mt-5 text-center">
            <%= f.submit "ログイン", class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
      <div class="col-3"></div>
    </div>
  </div>
</div>