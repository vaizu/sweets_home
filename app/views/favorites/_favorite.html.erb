<%#いいね機能%>
<% if post.favorited?(current_user) %>
<%#すでにいいねしている場合%>
  <%= link_to post_favorites_path(post.id), method: :delete, remote: true, class: "favorite_btn" do %>
    いいね♥<%= post.favorites.count %>
  <% end %>
<% else %>
  <%#いいねしていない場合%>
  <%= link_to post_favorites_path(post.id), method: :post, remote: true, class: "favorite_btn" do %>
    いいね♡<%= post.favorites.count %>
  <% end %>
<% end %>