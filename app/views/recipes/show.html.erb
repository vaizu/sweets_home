<div class="container">
  <div class="row">
    <h1 class=" mt-3 light">レシピ</h1>
  </div>
  <% if  @post.user == current_user %>
    <div class="row pl-4">
      <%= link_to "レシピ編集", edit_post_recipe_path(@post.id) ,class:"light2" %><br>
    </div>
  <% end %>

  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="row">
        <h1 class="light2">材料</h1>
      </div>
      <div class="card w-50 p-2 mt-2 light2">
        <% @post.meterials.each do |post| %>
          <div class="row">
            <h3 class="col-10 ml-3 mt-2 border-bottom">
              <input type="checkbox" aria-label="Checkbox for following text input">
              <%= post.meterial_name %>
              <%= post.quantity %>
            </h3>
          </div>
        <% end %>
      </div>

      <div class="row mt-5">
        <h1 class="light2">レシピ手順</h1>
      </div>

      <% @post.recipes.each do |post| %>
        <div  class="card w-100 p-2 mt-4 light2">
          <div class="row">
            <h1 class="col-1">
              <%= @sum += 1 %>
            </h1>
            <h3 class="col-8 mt-2">
              <%= post.recipe %>
            </h3>
            <div class="col-3">
              <%= image_tag post.get_recipe_image, class:"recipe-img" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-2"></div>
  </div>
  <div class="row pl-4">
    <%= link_to "投稿詳細に戻る", post_path(@post.id) ,class:"light2" %>
  </div>
</div>