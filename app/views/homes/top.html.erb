<div class = "container">
  <div class="d-flex justify-content-center">
    <div class = "row ">
      <h1 class="top-font">ようこそSweets Homeへ</h1>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <div class="row">
      <%#ログインしているか%>
      <% if user_signed_in? %>
      <% else %>
        <%#ログインしていない場合%>
        <%= link_to "初めての方", "/users/sign_up", class: "btn btn-primary m-3" %>
        <%= link_to "会員の方", "/users/sign_in", class: "btn btn-primary m-3" %>
      <% end %>
    </div>
  </div>

  <%#新着商品4件%>
  <h2>新着投稿</h2>
  <div class = "row text-center">
    <% @posts.each.with_index(4) do |post| %>
      <div class="col-lg-3">
        <p>
          <%= link_to post_path(post.id)  do %>
            <%= image_tag post.post_image, size:"200x150" %>
          <% end %>
        </p>
        <p>
          <%= post.post_name %>
        </p>
      </div>
    <% end %>
  </div>
  <p>
    <%= link_to "全ての投稿を見る>", '/posts' %>
  </p>
</div>
